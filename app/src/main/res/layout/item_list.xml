<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"
                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="160dp"
                                    android:layout_height="160dp"
                                    app:cardBackgroundColor="@color/cardBackground"
                                    app:cardCornerRadius="15dp" app:cardElevation="2dp"
                                    android:layout_margin="16dp">
    <ProgressBar
            style="?android:attr/progressBarStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/pb_loading_image"
            android:layout_gravity="center"/>
    <ImageView
            android:layout_width="135dp"
            android:layout_height="135dp"
            android:id="@+id/iv_sprite"
            android:contentDescription="@string/app_name"
            android:layout_gravity="center_horizontal"
            android:scaleType="fitCenter"/>
    <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/tv_number"
            android:textColor="@color/colorAccent"
            android:textSize="72sp"
            android:textAlignment="center"
            android:gravity="center" tools:text="000" android:visibility="gone"/>
    <TextView
            android:text="@string/app_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/tv_name"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textAlignment="center"
            android:layout_gravity="bottom"/>
</android.support.v7.widget.CardView>